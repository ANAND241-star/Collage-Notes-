# ─────────────────────────────────────────────────
#  NoteVault Backend — Environment Variables
#  Copy this file to .env and fill in your values
# ─────────────────────────────────────────────────

# Flask
FLASK_DEBUG=true
PORT=5000

# Security — CHANGE THIS in production! Use a long random string.
SECRET_KEY=notvault-super-secret-key-change-me

# MongoDB
# Local:
MONGO_URI=mongodb://localhost:27017/notvault
# MongoDB Atlas (cloud):
# MONGO_URI=mongodb+srv://<user>:<password>@cluster0.xxxxx.mongodb.net/notvault

# JWT token lifetime in hours
JWT_EXPIRY_HOURS=24

# CORS — restrict to your frontend URL in production
# ALLOWED_ORIGINS=https://yourfrontend.com
ALLOWED_ORIGINS=*
